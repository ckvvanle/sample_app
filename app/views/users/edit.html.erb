<% provide :title, t(".edit_user") %>
<% provide :button, t(".submit") %>
<h1><%= t ".edit_user" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_avatar"), "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
